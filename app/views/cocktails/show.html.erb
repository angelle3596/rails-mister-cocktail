<div class="details">
  <h2>Name:<%= @cocktail.name %></h2>
  <p>Details:</p>
   <ul>
      <%@cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %>: <%= dose.description %></li>
      <%= link_to "Delete dose", dose_path(dose), method: :delete %>
   <% end %>
  </ul>
  <%= link_to "Add dose",  new_cocktail_dose_path(@cocktail) %>
  <br>
  <%= link_to "Go back to cocktails", cocktails_path %>
  <br>
  <%= link_to "Delete Cocktail",  cocktail_path(@cocktail), method: :delete %>
</div>




