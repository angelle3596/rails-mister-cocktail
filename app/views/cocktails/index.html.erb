<div class="list_of_all_cocktails">
  <h1>Favorite Cocktails:</h1>
    <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="card col-xs-12 col-sm-4 col-lg-3">
        <img src="https://images.unsplash.com/photo-1570598912132-0ba1dc952b7d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1534&q=80" alt="Cocktail">
        <h2><%=cocktail.name%></h2>
        <%= link_to "Details", cocktail_path(cocktail) %>
      </div>
    <% end %>
  </div>
  <br>
</div>
